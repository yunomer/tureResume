# Prisma - Database Connection
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# NextAuth.js - Authentication
# Generate a strong secret: openssl rand -base64 32
NEXTAUTH_SECRET="YOUR_NEXTAUTH_SECRET_HERE"
# This should be the absolute URL of your app, e.g., http://localhost:3000 for development
NEXTAUTH_URL="http://localhost:3000"

# Application URL - Used for constructing absolute URLs (e.g., in emails)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Resend - Email Service
RESEND_API_KEY="re_YOUR_RESEND_API_KEY_HERE"

# Optional: Add any OAuth provider credentials here if you plan to use them
# GOOGLE_CLIENT_ID="YOUR_GOOGLE_CLIENT_ID"
# GOOGLE_CLIENT_SECRET="YOUR_GOOGLE_CLIENT_SECRET"
# GITHUB_CLIENT_ID="YOUR_GITHUB_CLIENT_ID"
# GITHUB_CLIENT_SECRET="YOUR_GITHUB_CLIENT_SECRET"
